.community-section
  // height 175vh
  // height 89vh
  // height 126vh
  // height 146vh
  // height 243vh
  height 307vh
  // padding-top 21vh
  // padding-left 5vw
  // padding-right 5vw
  display flex
  flex-direction column
  // padding 7vh 2vw 0 2vw
  padding 7vh 7vw 0 7vw
  width 100%
  background white
  box-sizing: border-box;

.community-section--title
  text-align: center

.community-section--title h1
  font-family $bold-font
  text-transform uppercase
  // font-size 63px
  // font-size 97px
  font-size 34px
  -webkit-margin-before 0
  -webkit-margin-after 0

.community-section--pin-icon
  background url('./assets/events-pin-icon.svg')
  background-repeat no-repeat
  background-size: contain
  // width 58px
  // height 58px
  // width 100px
  // height 100px
  background-position 8px 0px
  margin 70px auto
  width 40px;
  height 33px
  // margin 11px auto
  margin: 11px auto 38px auto;

.community-section--stockist-section
  display flex
  flex-direction column
  width 100%
  flex 0 0 auto
  margin 0px 0px 50px 0px

.stockist-section--the-south
.stockist-section--the-north
  display flex
  flex-direction column
  justify-content space-between

.stockist-heading
  font-family $bold-font
  font-size 18px
  margin 10px 0px 30px 0px
  text-align center

.stockist
  text-decoration none
  color black
  margin 10px 0px

.stockist--stockist-title
  font-family $bold-font

.stockist--stockist-location
  font-family $regaular-sans-font
  font-size 14px

.divider
  width 30px
  height 3px
  background-color black
  margin 20px auto

.stockist-contact
  font-family $regaular-font

.stockist-email
  font-family $bold-font
  text-decoration none
  color black
  margin 10px 0px 0px 0px


.community-section--testamonials-section
  display flex
  // flex-direction row
  flex-direction column
  justify-content space-between

.testamonial-wrapper
  margin-bottom 100px

.testamonial-logo
  background-repeat no-repeat
  background-size contain
  margin 0 auto 20px auto

.papersmiths-logo
  background-image url('./assets/papersmiths.svg')
  // width 178px
  // height 48px
  // width 344px
  height: 42px;
  width: 153px;
  background-position: 0px 8px;

.extract-logo
  // background-image url('./assets/extract.svg')
  // width 106px
  // width 339px
  // width 188px
  // height 48px
  // width 210px
  // height 95px
  background-image: url(./assets/extract.svg);
  width: 117px;
  height: 54px;

.magculture-logo
  background-image url('./assets/magculture.svg')
  // width 156px
  // height 48px
  width 222px
  height 68px
  background-image: url(./assets/magculture.svg);
  width: 142px;
  height: 46px;

.testamonial-copy
  font-family $regaular-sans-font
  // font-size 20px
  font-size 18px
  text-align center

.testamonial-divider
  // width 30px
  // width 75px
  // height 3px
  // background black
  // margin 30px auto 30px auto
  width: 30px;
  height: 3px;
  background: #000;
  margin: 20px auto 20px auto;

.testamonial-person
  font-family $bold-font
  // font-size 20px
  // font-size: 27px
  font-size 17px
  text-align center

.testamonial-position
  font-family $regaular-sans-font
  text-transform uppercase
  // font-size 15px
  // font-size 28px
  font-size 16px
  margin 12px auto 0px auto
  text-align center

.community-section--summary
  text-align center
  font-family $regaular-font
  // font-size 32px
  font-size 21px
  // margin 10vh 0 0 0
  margin 4vh 0 0 0

.community-section--email
  text-align center
  font-family $regaular-font
  // font-size 32px
  font-size 21px
  text-decoration underline
  margin 20px 0px 0px 0px

.community-section--sponsers--section
  // margin 12vh auto 0px auto
  margin-top auto
  margin-bottom 40px

.community-section--sponsers-section--logo
  background-image url('./assets/bip_logo.jpg')
  background-repeat no-repeat
  background-size contain
  width 60px
  height 60px
  margin 0 auto

.community-section--sponsers-section--line-one
  margin 10px 0px 0px 0px
  text-align center
  font-family $regaular-sans-font
  text-transform uppercase
  font-size 11px

.community-section--sponsers-section--line-two
  margin 10px 0px 0px 0px
  text-align center
  font-family $bold-font
  text-transform uppercase
  font-size 11px

@media screen and (min-width: 375px)
  .community-section
    height 262vh

@media screen and (min-width: 414px)
  .community-section
    height 240vh

@media screen and (min-width: 768px)
  .community-section
    height 153vh

@media screen and (orientation: landscape)
  .community-section
    height 485vh

  .community-section--pin-icon
    width 45px
    height 44px
    margin 11px auto 20px auto

  .testamonial-wrapper
    margin-bottom 70px

@media screen and (min-width: 667px) and (orientation: landscape)
  .community-section--pin-icon
    margin: 11px auto 15px auto;

  .community-section
    height 400vh
    padding: 7vh 10vw 0 10vw;

@media screen and (orientation: landscape) and (min-width 736px)
  .community-section
    height 331vh

@media screen and (orientation: landscape) and (min-width: 1024px)
  .community-section
    height 193vh

@media screen and (min-width: 1024px)
  .community-section
    height 125vh
    padding 10vh 5vw 0vw 5vw

  .community-section--title h1
    font-size 41px

  .community-section--pin-icon
    width 40px
    height 70px
    margin 35px auto 35px auto

  .community-section--testamonials-section
    flex-direction row

  .testamonial-copy
    margin 0px 20px

  .papersmiths-logo
    height: 56px;
    background-position: 0px 18px;

  .magculture-logo
    margin 6px auto 23px auto
