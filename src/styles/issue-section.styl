.issue-list
  // background-color rgba(0, 0, 0, 0.8)
  background-color transparent
  color white
  display flex
  flex-direction column
  justify-content center
  width: 100%

.issue-number
  display inline-block
  font-family $regaular-sans-font
  // font-size 400px
  // font-size 600px
  font-size 200px
  width: 50%
  text-align right
  line-height 302px
  // line-height 467px

.issue-one
  display flex
  flex-direction row
  justify-content center
  align-items center

.issue-details
  vertical-align top
  // height 220px
  // height 235px
  height 260px
  width 50%
  display flex
  flex-direction column
  justify-content space-between

.issue-title--number
  font-family $regaular-sans-font
  // font-size 20px
  // font-size 40px
  font-size 16px
  letter-spacing: 1.1px
  text-transform uppercase

.issue-title--name
  font-family $bold-font
  text-transform: uppercase
  // font-size 20px
  // font-size 35px
  font-size 16px
  letter-spacing 1.1px

.issue-description
  font-family: $regaular-font
  // font-size 20px
  // font-size 31px
  font-size 16px
  // width 40%
  // width calc(100% - 131px)
