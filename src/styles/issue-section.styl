.issue-list
  background-color rgba(0, 0, 0, 0.8)
  color white
  display flex
  flex-direction column
  justify-content center

.issue-number
  display inline-block
  font-family $regaular-sans-font
  font-size 400px
  width: 50%
  text-align right
  line-height 302px

.active-issue
  border 1px solid white
  border-radius 50%

.issue-one
  display flex
  flex-direction row
  justify-content center
  align-items center

.issue-details
  vertical-align top
  height 302px
  width 50%
  display flex
  flex-direction column
  justify-content space-between

.issue-title--number
  font-family $regaular-sans-font
  font-size 20px
  letter-spacing: 1.1px
  text-transform uppercase

.issue-title--name
  font-family $bold-font
  text-transform: uppercase
  font-size 20px
  letter-spacing 1.1px

.issue-description
  font-family: $regaular-font
  font-size 20px
  width 40%

.purchase-button
  font-family $bold-font
  font-size 18px
  letter-spacing: 1.1px
  text-transform uppercase
  width 150px
  border 2px solid white
  padding 5px 17px

.issue-selector-section
  width 100%
  height 60px
  text-align center

.issue-selector
  list-style-type none
  text-align center
  margin 40px 0px 10px 0px

.issue-selector-number
  font-family $regaular-font
  display inline-block
  margin 0px 10px
  font-size 14px
  padding 0px 7px 0px 7px

.stocking-link
  font-family $bold-font
  font-size 14px
  text-transform uppercase
  text-decoration underline
