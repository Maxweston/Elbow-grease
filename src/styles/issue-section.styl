.issue-list
  background-color rgba(0, 0, 0, 0.5)
  color white
  display flex
  flex-direction column
  justify-content center
  width: 100%

.issue-number
  display inline-block
  font-family $regaular-sans-font
  // font-size 400px
  // font-size 600px
  font-size 200px
  width: 50%
  text-align right
  line-height 302px
  // line-height 467px

.issue-one
  display flex
  flex-direction row
  justify-content center
  align-items center

.issue-details
  vertical-align top
  // height 220px
  // height 235px
  height 260px
  width 50%
  display flex
  flex-direction column
  justify-content space-between

.issue-title--number
  font-family $regaular-sans-font
  // font-size 20px
  // font-size 40px
  font-size 16px
  letter-spacing: 1.1px
  text-transform uppercase

.issue-title--name
  font-family $bold-font
  text-transform: uppercase
  // font-size 20px
  // font-size 35px
  font-size 16px
  letter-spacing 1.1px

.issue-description
  font-family: $regaular-font
  // font-size 20px
  // font-size 31px
  font-size 16px
  // width 40%
  // width calc(100% - 131px)
  width calc(100% - 20px)

.purchase-button
  font-family $bold-font
  // font-size 18px
  // font-size 29px
  font-size 14px
  letter-spacing: 1.1px
  text-transform uppercase
  // width 150px
  // width 211px
  width 106px
  border 2px solid white
  // padding 5px 17px
  padding 4px 7px

.issue-selector-section
  width 100%
  // height 60px
  text-align center

.issue-selector
  list-style-type none
  text-align center
  // margin 40px 0px 10px 0px
  // margin 40px 0px 40px 0px
  margin 0px 0px 10px 0px

.issue-selector-number
  font-family $regaular-font
  display inline-block
  margin 0px 10px
  // font-size 40px
  font-size 20px
  padding 0px 7px 0px 7px

.active-issue
  // border-bottom 7px solid white
  border-bottom 2px solid white

.stocking-link
  font-family $bold-font
  font-size 14px
  text-transform uppercase
  text-decoration underline

@media screen and (min-width: 768px)
  .issue-number
    font-size 342px
    line-height 353px

  .issue-title--number
  .issue-title--name
    font-size 20px

  .issue-description
    font-size 18px
    width calc(100% - 116px)

@media screen and (orientation: landscape)
  .issue-number
    font-size 240px
    line-height 204px

  .issue-details
    height 181px

  .issue-description
    width calc(100% - 70px)
    font-size 13px

  .issue-selector-number
    font-size 18px
    padding 0px 4px 0px 4px

  .stocking-link
    font-size 12px

@media screen and (orientation: landscape) and (min-width 667px)
  .issue-description
    width calc(100% - 115px)

@media screen and (min-width: 1024px) and (orientation: landscape)
  .issue-number
    line-height 324px
    font-size 332px

  .issue-details
    height 252px

  .issue-description
    font-size 19px

  .purchase-button
    width: 118px
    font-size 15px
    padding: 7px 11px

  .issue-selector-number
    font-size 20px

@media screen and (min-width: 1024px)
  .issue-description
      width: calc(100% - 358px);
