.purchase-button
  font-family $bold-font
  // font-size 18px
  // font-size 29px
  font-size 14px
  letter-spacing: 1.1px
  text-transform uppercase
  // width 150px
  // width 211px
  width 106px
  border 2px solid white
  // padding 5px 17px
  padding 4px 7px

.issue-selector-section
  width 100%
  // height 60px
  text-align center

.issue-selector
  list-style-type none
  text-align center
  // margin 40px 0px 10px 0px
  // margin 40px 0px 40px 0px
  margin 0px 0px 10px 0px

.issue-selector-number
  font-family $regaular-font
  display inline-block
  margin 0px 10px
  // font-size 40px
  font-size 20px
  padding 0px 7px 0px 7px

.active-issue
  // border-bottom 7px solid white
  border-bottom 2px solid white

.stocking-link
  font-family $bold-font
  font-size 14px
