.issue-list
  background-color rgba(0, 0, 0, 0.5)
  color white
  display flex
  flex-direction column
  justify-content center
  width: 100%
  position relative

.issue-section--title
  color white
  text-align: center
  font-family $bold-font
  text-transform uppercase
  font-size 34px
  -webkit-margin-before 0
  -webkit-margin-after 0
  display none

.issue-number
  display inline-block
  font-family $regaular-sans-font
  font-size 200px
  width: 50%
  text-align right
  line-height 302px
  display none

.question-mark
  background-image: url('./assets/question-mark.svg')
  background-size contain
  background-repeat no-repeat
  width: 200px;
  height: 261px;
  display: block;
  margin: 20px 0px 20px 0px;

.issue-one-mobile-image
  width: calc(100vw - 80px);
  margin: 0px auto 20px auto;
  max-height: 450px;
  max-width: 450px;
  display: block;

.issue-slider-section
  height calc(100vh - 50px)
  width 100%
  position relative
  overflow-x hidden
  order 2

.issue-slider-section--slide
  position absolute
  height 100%
  width 100%
  transition transform 0.3s ease
  padding 0px 40px
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;

.slide-on-right
  transform translateX(100vw)

.slide-on-left
  transform translateX(-100vw)

.issue-slider-section--slide.active-slide
  transform translateX(0px)

.issue-description
  width: 300px

.issue-details
  vertical-align top
  display flex
  flex-direction column
  justify-content space-between
  // height calc(100% - 86px)

.issue-title--number
  font-family $regaular-sans-font
  font-size 16px
  letter-spacing: 1.1px
  text-transform uppercase
  margin 0px 0px 10px 0px
  display none

.issue-title--name
  font-family $bold-font
  text-transform: uppercase
  font-size 16px
  letter-spacing 1.1px
  margin 0px 0px 20px 0px
  max-width 450px
  cursor pointer

.issue-description
  font-family $regaular-sans-font
  font-size 16px
  width calc(100% - 20px)
  margin 0px 0px 20px 0px
  max-width 450px
  cursor pointer

.purchase-button
.preorder-button
  font-family $bold-font
  font-size 17px
  letter-spacing: 1.1px
  text-transform uppercase
  border 2px solid white
  padding 4px 7px

.purchase-button
  width 58px

.preorder-button
  width 132px

.issue-selector-section
  width 100%
  text-align center
  order 1
  height 70px
  display flex
  flex-direction column
  justify-content center
  // align-items center

.selector-wrapper
  display block

.issue-selector
  list-style-type none
  text-align center
  display inline-block

.issue-selector-number
  font-family $regaular-font
  display inline-block
  margin 0px 10px
  font-size 20px
  padding 0px 7px 0px 7px
  cursor pointer

.stocking-box
  background-image url('./assets/stock-box.svg')
  background-repeat no-repeat
  width 22px
  height 22px
  display inline-block
  vertical-align baseline
  margin 0px 10px
  padding 0px 7px 0px 7px
  vertical-align sub

.active-issue
  border-bottom 2px solid white

.stocking-link
  font-family $bold-font
  font-size 14px
  text-transform uppercase
  text-decoration underline
  display none

@media screen and (min-width: 768px)
  .issue-number
    font-size 342px
    line-height 353px

  .issue-title--number
  .issue-title--name
    font-size 20px

  .issue-description
    font-size 18px
    width 400px

  .issue-selector-number
    font-size 24px

  .issue-one-mobile-image
    margin: 0px auto 20px auto;

  .question-mark
    width 199px
    height 297px
    margin 20px 0px 20px 0px

@media screen and (orientation: landscape)
  .issue-number
    font-size 240px
    line-height 204px

  .issue-details
    height 181px

  // .issue-description
  //   width calc(100% - 70px)
  //   font-size 13px

  .issue-selector-number
    font-size 18px
    padding 0px 4px 0px 4px

  .stocking-link
    font-size 12px

@media screen and (min-width: 1024px) and (orientation: landscape)
  .issue-number
    line-height 324px
    font-size 332px

  .issue-details
    height 252px

  .issue-description
    font-size 19px

  .purchase-button
    width: 118px
    font-size 15px
    padding: 7px 11px

  .issue-selector-number
    font-size 20px

@media screen and (min-width: 1024px)
  .issue-section--title
    display block

  .mobile-issue-slider-header
    display

  .issue-slider-section
    // height calc(100vh - 60px)
    width 100%
    position relative
    overflow-x hidden
    order 1
    height calc(100vh - 307px)

  .issue-slider-section--slide
    flex-direction row


  .issue-number
    display inline-block
    line-height: 254px

  .issue-number.question-mark
    height 251px
    width 50%
    background-position 87% 0px

  .issue-one-mobile-image
    display none

  .issue-slider-section--slide
    position absolute
    height 100%
    width 100%
    transition transform 0.3s ease

  .issue-title--name
    display block
    font-size 27px
    margin 0px
    line-height: 21px

  // .slide-on-right
  //   transform translateX(100vw)
  //
  // .slide-on-left
  //   transform translateX(-100vw)

  // .issue-slider-section--slide.active-slide
  //   transform translateX(0px)

  .issue-description
    width: 300px
    font-size 18px
    margin 0px

  .purchase-button
    width 60px

  .issue-selector-section
    order 2
    height 77px

  .issue-selector
    margin 0px 0px 10px 0px

  .stocking-link
    display block
    margin-top 17px
