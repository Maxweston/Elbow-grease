.issue-list
  background-color rgba(0, 0, 0, 0.8)
  color white
  display flex
  flex-direction column
  justify-content center

.issue-number
  display inline-block
  font-family $regaular-sans-font
  // font-size 400px
  font-size 600px
  width: 50%
  text-align right
  // line-height 302px
  line-height 467px

.issue-one
  display flex
  flex-direction row
  justify-content center
  align-items center

.issue-details
  vertical-align top
  // height 302px
  height 451px
  width 50%
  display flex
  flex-direction column
  justify-content space-between

.issue-title--number
  font-family $regaular-sans-font
  // font-size 20px
  font-size 40px
  letter-spacing: 1.1px
  text-transform uppercase

.issue-title--name
  font-family $bold-font
  text-transform: uppercase
  // font-size 20px
  font-size 35px

  letter-spacing 1.1px

.issue-description
  font-family: $regaular-font
  // font-size 20px
  font-size 31px
  // width 40%
  width calc(100% - 131px)

.purchase-button
  font-family $bold-font
  // font-size 18px
  font-size 29px
  letter-spacing: 1.1px
  text-transform uppercase
  // width 150px
  width 211px
  border 2px solid white
  padding 5px 17px

.issue-selector-section
  width 100%
  // height 60px
  text-align center

.issue-selector
  list-style-type none
  text-align center
  // margin 40px 0px 10px 0px
  margin 40px 0px 40px 0px

.issue-selector-number
  font-family $regaular-font
  display inline-block
  margin 0px 10px
  font-size 40px
  padding 0px 7px 0px 7px

.active-issue
  border-bottom 7px solid white

.stocking-link
  font-family $bold-font
  font-size 14px
  text-transform uppercase
  text-decoration underline
