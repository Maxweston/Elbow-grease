.main-description
  background: rgb(255,255,255)
  padding 0px 18%
  font-family $regaular-font
  font-size 18px
  text-align center
  display flex
  flex-direction column
  justify-content center
  position relative
  p:nth-of-type(2)
    margin-top 50px
  span
    text-decoration underline
    cursor pointer

.hard-work-modal
.struggles-modal
.face-adversity-modal
  display none
  width 250px
  height 400px
  margin: auto;
  position: absolute;

.hard-work-modal
  left 10%

.struggles-modal
  right 10%

.face-adversity-modal
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;

@media screen and (orientation: landscape)
  .main-description
    padding 0px 9%
    font-size 15px
    p:nth-of-type(2)
      margin-top 29px

@media screen and (min-width: 667px) and (orientation: landscape)
  .main-description
    font-size 19px

@media screen and (min-width: 1024px) and (orientation: landscape)
    .main-description
      padding 0px 13%
      // font-size 33px
      font-size 27px
