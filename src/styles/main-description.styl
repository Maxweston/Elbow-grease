.main-description
  background: rgb(255,255,255)
  padding 0px 7%
  font-family $regaular-font
  // font-size 58px
  font-size 20px
  text-align center
  // margin-top 100px
  display flex
  flex-direction column
  justify-content center
  p:nth-of-type(2)
    margin-top 100px
  span
    text-decoration underline

@media screen and (orientation: landscape)
  .main-description
    padding 0px 9%
    font-size 15px
    p:nth-of-type(2)
      margin-top 29px

@media screen and (min-width: 667px) and (orientation: landscape)
  .main-description
    font-size 19px
