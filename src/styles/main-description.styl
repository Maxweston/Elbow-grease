.main-description
  background: rgb(255,255,255)
  padding 0px 18%
  font-family $regaular-font
  // font-size 58px
  font-size 20px
  text-align center
  // margin-top 100px
  display flex
  flex-direction column
  justify-content center
  position relative
  p:nth-of-type(2)
    margin-top 100px
  span
    text-decoration underline

.hard-work-modal
.struggles-modal
.face-adversity-modal
  display none
  width 250px
  height 400px
  // top 20vw
  // right 50vw
  margin: auto;
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;



@media screen and (orientation: landscape)
  .main-description
    padding 0px 9%
    font-size 15px
    p:nth-of-type(2)
      margin-top 29px

@media screen and (min-width: 667px) and (orientation: landscape)
  .main-description
    font-size 19px

@media screen and (min-width: 1024px) and (orientation: landscape)
    .main-description
      padding 0px 13%
      font-size 33px
