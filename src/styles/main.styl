@import './fonts.styl'

$bold-font = 'novel_sans_proextrabold'
$regaular-font = 'novel_proregular'
$regaular-sans-font = 'novel_sans_proregular'

body, html
  height 100%
  margin 0px

.main-wrapper
  height 100%
  background-color: white;
  background-image url('./assets/hands.jpg')
  background-size cover
  background-repeat no-repeat
  background-position center
  background-attachment fixed
  position relative
  padding-top 20px

