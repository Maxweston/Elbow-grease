@import './fonts.styl'

$bold-font = 'novel_sans_proextrabold'
$regaular-font = 'novel_proregular'
$regaular-sans-font = 'novel_sans_proregular'

*
  box-sizing border-box

h2
  margin 0

body, html
  height 100%
  margin 0px
  vertical-align top

section
  height 100vh

.main-wrapper
  // height 100%
  background-color: white;
  background-image url('./assets/hands.jpg')
  background-size cover
  background-repeat no-repeat
  background-position center
  background-attachment fixed
  position relative

.header
  background rgba(0, 0, 0, 0)
  padding-top 20px

.title-logo
  background-image url('./assets/elbow-grease-white.svg')
  // width 100px
  // height 58px
  width 160px
  height 100px
  background-size contain
  background-repeat no-repeat
  margin 0 auto

.main-description
  background: rgb(255,255,255);
  padding 7% 7%
  font-family $regaular-font
  font-size 32px
  text-align center
  margin-top 100px
  p:nth-of-type(2)
    margin-top 50px
  span
    text-decoration underline

.issue-list
  background-color rgba(0, 0, 0, 0.8)
  color white

.issue-number
  display inline-block
  font-family $regaular-sans-font
  font-size 400px
  width: 50%
  text-align right

.issue-details
  display inline-block
  width 50%

.issue-title--number
  font-family $regaular-sans-font
  font-size 20px
  letter-spacing: 1.1px
  text-transform uppercase

.issue-title--name
  font-family $bold-font
  text-transform: uppercase
  font-size 20px
  letter-spacing: 1.1px

.issue-description
  font-family: $regaular-font
  font-size 20px
  width 40%

.purchase-button
  font-family $bold-font
  font-size 18px
  letter-spacing: 1.1px
  text-transform uppercase
  width 50px
  border 2px solid white
  padding 5px 17px
  margin 0px 0px 10px 0px

.footer
  height 150px
