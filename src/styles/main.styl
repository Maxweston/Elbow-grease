  height 58px
  background-size contain
  background-repeat no-repeat
  margin 0 auto

.main-description
  background:rgba(255,255,255,0.5);
  height 100%
  padding 7% 7%
  font-family $regaular-font
  font-size 32px
  text-align center
  margin-top 100px
  p:nth-of-type(2)
    margin-top 50px
  span
    text-decoration underline

