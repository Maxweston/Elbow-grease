@import './fonts.styl'

$bold-font = 'novel_sans_proextrabold'
$regaular-font = 'novel_proregular'
$regaular-sans-font = 'novel_sans_proregular'

// Media Queries
$mediumBreakpoint = 768px
$highBreakpoint = 1140px

*
  box-sizing border-box

h2
  margin 0

body, html
  height 100%
  margin 0px
  vertical-align top

section
  height 100vh

p
  -webkit-margin-before 0
  -webkit-margin-after 0

ul
  -webkit-margin-before: 0;
  -webkit-margin-after: 0;
  -webkit-padding-start: 0;

.main-wrapper
  // height 100%
  background-color white
  background-image url('./assets/hands.jpg')
  background-size cover
  background-repeat no-repeat
  background-position center
  background-attachment fixed
  position relative

// section imports
@import './title-section.styl'
@import './main-description.styl'
@import './issue-section.styl'
@import './community-section.styl'
@import './footer.styl'
