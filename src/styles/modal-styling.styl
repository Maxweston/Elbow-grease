.modal-overlay
  position absolute
  width 100vw
  height 100vh
  top 0
  bottom 0
  left 0
  right 0
  background-color rgba(0, 0, 0, 0.8)
  opacity 0
  z-index -1
  transition 0.3 opacity ease-in-out
  display flex

.modal-overlay-visabile
  opacity 1
  z-index 12

.modal-container
  background-color white
  width 423px
  margin auto auto
  position: relative;

.modal-image
  width 423px
  img
    width 100%
    height 100%

.modal-close-icon
  position: absolute;
  right: 11px;
  top: 11px;
  width: 32px;
  height: 32px;
  opacity: 0.3;

.modal-close-icon:hover
  opacity: 1;

.modal-close-icon:before,
.modal-close-icon:after
  position: absolute;
  left: 15px;
  content: '';
  height: 33px;
  width: 2px;
  background-color: #333;

.modal-close-icon:before
  transform: rotate(45deg);

.modal-close-icon:after
  transform: rotate(-45deg)
