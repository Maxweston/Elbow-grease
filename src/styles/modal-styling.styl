.modal-overlay
  position fixed
  width 100vw
  height 100vh
  top 0
  bottom 0
  left 0
  right 0
  background-color rgba(0, 0, 0, 0.8)
  opacity 0
  z-index -1
  transition opacity 0.3s ease-in-out
  display flex

.modal-overlay-visibile
  opacity 1
  z-index 12

.modal-container
  background-color white
  width 61vw
  margin auto auto
  position: relative;

.modal-image
  width 100%
  img
    width 100%
    height 100%

.modal-close-icon
  position: absolute;
  right: 25px;
  top: 25px;
  width: 33px;
  height: 32px;
  background-color black
  cursor pointer

.modal-close-icon:hover
  &:before
  &:after
    opacity 0.3

.modal-close-icon:before,
.modal-close-icon:after
  position: absolute;
  left: 15px;
  content: '';
  height: 33px;
  width: 3px;
  background-color: white;

.modal-close-icon:before
  transform: rotate(45deg);

.modal-close-icon:after
  transform: rotate(-45deg)

@media screen and (max-width: 600px)
  .modal-close-icon
    right 10px
    top 10px
    width 21px
    height 22px

  .modal-close-icon:before,
  .modal-close-icon:after
    height 20px
    left 9px
